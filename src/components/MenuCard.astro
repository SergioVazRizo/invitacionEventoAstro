---
interface MenuItem {
  tipo: string;
  descripcion: string;
}

const menuItems: MenuItem[] = [
  { tipo: "Entrada", descripcion: "Ensalada de hojas del bosque" },
  { tipo: "Plato principal", descripcion: "Solomillo de ciervo con salsa de bayas silvestres" },
  { tipo: "Postre", descripcion: "Tarta de moras con helado de lavanda" }
];
---

<div class="menu-card">
  <h2>Nuestro Men√∫</h2>
  <ul>
    {menuItems.map(({ tipo, descripcion }) => (
      <li>
        <strong>{tipo}:</strong> {descripcion}
      </li>
    ))}
  </ul>
</div>

<style>
  .menu-card {
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #fff;
  }

  ul {
    list-style-type: none;
    padding: 0;
  }

  li {
    color: #ddd;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }

  @media (min-width: 768px) {
    .menu-card {
      padding: 1.5rem;
    }

    h2 {
      font-size: 1.75rem;
    }

    li {
      font-size: 1rem;
    }
  }

  li strong {
    color: #fff;
  }
</style>
